#include <stdio.h>
 25 
 26 void    dec_to_hex(int nbr)
 27 {   
 28     if (nbr > 15)
 29         dec_to_hex(nbr / 16);
 30     ft_putchar(HEX[nbr % 16]);
 31 }   
 32 
 33 void    put_byte()
 34 {}
 35 
 36 void    put_counter(int counter)
 37 {
 38     dec_to_hex(counter);
 39 }
 40 
 41 void    hexdump(t_app *self, char *buf)
 42 {   
 43     int     counter;
 44     
 45     if (self->cflag)
 46         ft_putstr(buf);
 47     else
 48     {   
 49         counter = 0;
 50         while (*buf)
 51         {   
 52             if (counter % 16 == 0)
 53                 put_counter(counter);
 54             if (counter % 2 == 0)
 55             {   
 56                 ft_putchar(' '); 
 57                 dec_to_hex(*(buf + 1));
 58             }
 59             else
 60                 dec_to_hex(*(buf - 1));
 61             if (counter % 16 == 15)
 62                 ft_putchar('\n');
 63             buf++;
 64             counter++;
 65         }
 66     }
